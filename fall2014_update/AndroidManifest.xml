<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.vkedco.mobappdev.picture_browser"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/img_04"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PictureBrowserAct"
            android:label="@string/title_activity_picture_browser" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PictureProcessorAct"
            android:label="@string/title_activity_picture_grayscaler" >
            <intent-filter>
                <action android:name="android.intent.action.PictureProcessorAct" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>
